'' Simple program to check if a number is prime ''

begin
  read(num)        ** Read a number from the user
  isPrime := true   ** Assume the number is prime initially

  '' Check for factors from 2 to the square root of the number''
  for i := 2 to sqrt(num) do
    begin
      if num % i = 0 then
        begin
          isPrime := false
          break          ** Exit the loop if a factor is found
        end
    end

  ''Output the result''
  if isPrime then
    print("The number is prime")
  else
    print("The number is not prime")

end
